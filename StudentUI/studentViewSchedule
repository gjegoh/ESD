    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const token = urlParams.get('token')

        // URL for function
        // const url = "http://10.124.9.182:5004/getClassSchedules" + `?token=${token}`
        const url = "http://192.168.1.2:5004/getClassSchedules" + `?token=${token}`

        function logout() {
            window.location.replace(`./studentLogin.html`)
        }

        function showError(message) {
            $('#errors')
                .append("<label>" + message + "</label>");
        }

        async function getClassSchedules(url) {
            const response = await fetch(url)
            let data = await response.json()
            showClassSchedules(data)
        }

        function showClassSchedules(data) {
            let scheduleList = data['data']['scheduleList']
            let classDict = data['data']['classDict']
            for (let schedule of scheduleList) {
                document.getElementById('schedule').innerHTML +=
                    `
                        <tr>
                            <td>${schedule['scheduleID']}</td>
                            <td>${classDict[schedule['classID']][0]}</td>
                            <td>${classDict[schedule['classID']][1]}</td>
                            <td>${schedule['year']}</td>
                            <td>${schedule['day']}</td>
                            <td>${schedule['timing']}</td>
                            <td>${schedule['tutorID']}</td>
                            <td><button type="submit" class="btn sign-up-btn">Sign Up</button></td>
                        </tr>`
            }
            
            document.getElementById('loadingmsg').style.display = 'none'
            document.getElementById('schedule').style.display = 'block'
        }

        getClassSchedules(url)
    </script>

    <script>document.getElementById('logout').innerHTML += `<a class="dropdown-item  text-dark" ><button type="submit" class="btn" onclick="logout()">Logout</button></a>`
    </script>
    
